<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- ############# add ros2_control => INSERT EPMC_ROS_HW_PLUGIN ############### -->

    <ros2_control name="epmc_v2_hardware_interface" type="system">

      <hardware>
        <plugin>epmc_v2_hardware_interface/EPMC_V2_HardwareInterface</plugin>
        <param name="port">/dev/ttyUSB0</param>
        <param name="motor0_wheel_name">front_left_wheel_joint</param>
        <param name="motor1_wheel_name">front_right_wheel_joint</param>
        <param name="motor2_wheel_name">rear_left_wheel_joint</param>
        <param name="motor3_wheel_name">rear_right_wheel_joint</param>
        <param name="cmd_vel_timeout_ms">2000</param>
      </hardware>

      <joint name="front_left_wheel_joint">
        <command_interface name="velocity">
            <param name="min">-10.0</param>
            <param name="max">10.0</param>
        </command_interface>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>

      <joint name="front_right_wheel_joint">
        <command_interface name="velocity">
            <param name="min">-10.0</param>
            <param name="max">10.0</param>
        </command_interface>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>

      <joint name="rear_left_wheel_joint">
        <command_interface name="velocity">
            <param name="min">-10.0</param>
            <param name="max">10.0</param>
        </command_interface>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>

      <joint name="rear_right_wheel_joint">
        <command_interface name="velocity">
            <param name="min">-10.0</param>
            <param name="max">10.0</param>
        </command_interface>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>

    </ros2_control>

    <!-- ################################################################# -->

</robot>